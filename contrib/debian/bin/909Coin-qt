#!/bin/sh

set -e

umask 077

basedir=~/.909Coin
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/909Coin.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# 909Coin does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/909Coin/909Coin-qt "$@"
